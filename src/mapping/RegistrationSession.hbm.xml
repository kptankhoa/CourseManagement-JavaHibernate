<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.RegistrationSession" table="registration_session" schema="coursesdb">
        <id name="sessionId">
            <column name="session_id" sql-type="int"/>
        </id>
        <many-to-one name="course" class="model.Course" fetch="join" lazy="false" cascade="save-update">
            <column name="course_id" sql-type="varchar(45)" length="45" unique="true"/>
        </many-to-one>
        <property name="startDate">
            <column name="start_date" sql-type="date"/>
        </property>
        <property name="endDate">
            <column name="end_date" sql-type="date"/>
        </property>
    </class>
</hibernate-mapping>