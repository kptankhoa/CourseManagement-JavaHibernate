<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.Clazz" table="class" schema="coursesdb">
        <id name="classId">
            <column name="class_id" sql-type="varchar(45)" length="45"/>
        </id>
        <property name="total">
            <column name="total" sql-type="int"/>
        </property>
        <property name="totalMale">
            <column name="total_male" sql-type="int"/>
        </property>
        <property name="totalFemale">
            <column name="total_female" sql-type="int"/>
        </property>
    </class>
</hibernate-mapping>