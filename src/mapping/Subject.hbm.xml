<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="model.Subject" table="subject" schema="coursesdb">
        <id name="subjectId">
            <column name="subject_id" sql-type="varchar(45)" length="45"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="credits">
            <column name="credits" sql-type="int"/>
        </property>
    </class>
</hibernate-mapping>